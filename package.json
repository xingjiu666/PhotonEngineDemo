{
  "name": "photon-engine-demo",
  "version": "1.0.0",
  "private": true,
  "description": "PhotonEngine SDK 功能演示",
  "main": "dist-electron/main.js",
  "author": "xingjiu (星九) <hi@xingjiu.xyz>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "pack": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder",
    "dist:win": "vite build && electron-builder --win",
    "dist:mac": "vite build && electron-builder --mac",
    "dist:linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "@photon-engine/capture": "^1.1.0",
    "@photon-engine/comm": "^1.1.0",
    "@photon-engine/core": "^1.1.0",
    "@photon-engine/electron": "^1.1.0",
    "@photon-engine/hef": "^1.1.0",
    "element-plus": "^2.9.0",
    "vue": "^3.5.0",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "node-hid": "^3.1.0",
    "typescript": "^5.7.0",
    "vite": "^6.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "vue-tsc": "^2.2.0"
  },
  "build": {
    "appId": "com.photon-engine.demo",
    "productName": "PhotonEngine Demo",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "PhotonEngine Demo"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "public/icon.png"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "node-hid",
      "vue-demi"
    ]
  }
}
